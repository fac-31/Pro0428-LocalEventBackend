{
  "tasks": {
    "run": "deno run --env-file=.env --allow-env --allow-read --allow-sys --allow-net main.ts",
    "dev": "deno run -A --watch server.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "nodeModulesDir": true,
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "exclude": ["./node_modules"],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
